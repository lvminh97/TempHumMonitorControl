<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.OnTapPackSelectFragment">

    <TextView
        android:id="@+id/tv_chongoiontap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:textSize="34sp"
        android:textColor="#000"
        android:text="Chọn gói ôn tập"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_ontap_A1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_chongoiontap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="22dp"
        android:text="A1"
        android:background="#03A9F4"/>
    <Button
        android:id="@+id/btn_ontap_A2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ontap_A1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="22dp"
        android:text="A2"
        android:background="#03A9F4"/>
    <Button
        android:id="@+id/btn_ontap_B1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ontap_A2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="22dp"
        android:text="B1"
        android:background="#03A9F4"/>
</androidx.constraintlayout.widget.ConstraintLayout>