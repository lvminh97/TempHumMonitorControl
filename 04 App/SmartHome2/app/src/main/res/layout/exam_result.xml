<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_exam_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Đề 1"
        android:textColor="#000"
        android:textSize="24sp"/>
    <ImageView
        android:id="@+id/img_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_check_circle_24"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_true_num"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp" />
    <TextView
        android:id="@+id/tv_true_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_num"
        app:layout_constraintLeft_toRightOf="@id/img_true"
        app:layout_constraintRight_toLeftOf="@id/img_false"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="24"
        android:textColor="#000"/>
    <ImageView
        android:id="@+id/img_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_cancel_24"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_num"
        app:layout_constraintLeft_toRightOf="@id/tv_true_num"
        app:layout_constraintRight_toLeftOf="@id/tv_false_num"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_false_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_exam_num"
        app:layout_constraintLeft_toRightOf="@id/img_false"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textColor="#000"/>
</androidx.constraintlayout.widget.ConstraintLayout>